content-panel-box-shadow()
  box-shadow: 0 6px 12px 0 rgba(50,50,93,.03), 0 2px 5px 0 rgba(0,0,0,.06)

dialog-box-shadow()
  box-shadow: 0px 3px 1px -2px rgba(black, 0.1), 0px 2px 2px 0px rgba(black, 0.05), 0px 1px 5px 0px rgba(black, 0.09)

panel-box-shadow()
  box-shadow: 0 6px 25px 0 rgba(50,50,93,.15), 0 2px 8px 0 rgba(0,0,0,.12)

magic-scrollbars()
  // show when needed and don't shift content
  overflow-y: scroll // for Firefox and Edge
  overflow-y: overlay

  // must set to control scrollbars
  &::-webkit-scrollbar
    width: 8px

    // underlying scrollbar rectangle
    &-track
      background: rgba(0,0,0,0.02)

    // current scrollbar position
    &-thumb
      border-radius: 4px
      background: rgba(0,0,0,0.05)

      // grabbed portion of the slider
      &:hover
        background: rgba(0,0,0,0.1)
