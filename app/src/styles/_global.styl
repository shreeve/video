html
  height: 100%
  font-size: 10px
  box-sizing: border-box

  @media (max-width: screen-lg)
    font-size: 9px

*, *:before, *:after
  box-sizing: inherit

body
  min-height: 100%
  font-family: font-base
  font-size: 1.6rem
  line-height: 1.4
  color: color-base
  background: color-body
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

a
  color: inherit
  cursor: pointer
  text-decoration: none

  &:hover, &:visited, &:active, &:focus
    color: inherit
    text-decoration: none
    outline: none

p
  margin: 1.5rem 0
  font-size: 1.4rem
  color: rgba(color-base, 0.9)
